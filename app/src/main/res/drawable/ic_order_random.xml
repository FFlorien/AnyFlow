<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NewApi">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="32dp"
            android:height="32dp"
            android:viewportWidth="400"
            android:viewportHeight="400">
            <path
                android:name="triangle"
                android:fillColor="@color/iconInApp"
                android:pathData=" M 70,324 L 110,375 L 150,324ZM 250,324 L 290,375 L 330,324Z"
                android:strokeWidth="35"
                android:strokeAlpha="1"
                android:strokeColor="@color/iconInApp"
                android:strokeLineCap="round"
                android:strokeLineJoin="round" />
            <path
                android:name="curved_lines"
                android:fillColor="@color/iconInApp"
                android:pathData="M 110 25 C 133.808 186.717 269.952 189.745 290 327 M 290 25 C 265.247 186.717 131.072 189.745 110 327"
                android:strokeWidth="35"
                android:strokeAlpha="1"
                android:strokeColor="@color/iconInApp"
                android:strokeLineCap="round"
                android:strokeLineJoin="round" />
        </vector>
    </aapt:attr>
    <target android:name="curved_lines">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@android:anim/linear_interpolator"
                android:propertyName="pathData"
                android:valueFrom="M 110 25 C 133.808 186.717 269.952 189.745 290 327 M 290 25 C 265.247 186.717 131.072 189.745 110 327"
                android:valueTo="M 110 25 C 110 107 110 216 110 325 M 290 25 C 290 107 290 216 290 325"
                android:valueType="pathType" />
        </aapt:attr>
    </target>
    <target android:name="triangle">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="200"
                android:interpolator="@android:anim/linear_interpolator"
                android:propertyName="pathData"
                android:valueFrom=" M 70,324 L 110,375 L 150,324ZM 250,324 L 290,375 L 330,324Z"
                android:valueTo="M 250,324 L 290,375 L 330,324Z M 70,324 L 110,375 L 150,324Z"
                android:valueType="pathType" />
        </aapt:attr>
    </target>
</animated-vector>
