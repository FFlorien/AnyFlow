<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="be.florien.anyflow.view.player.filter.display.DisplayFilterFragmentVM" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unselected">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filterList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_saved_filter_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:tint="@color/primary"
            android:visibility="@{vm.areFilterGroupExisting ? View.VISIBLE : View.GONE}"
            app:layout_anchor="@id/filterList"
            app:layout_behavior="be.florien.anyflow.view.customView.ScrollAwareFabBehavior"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@drawable/ic_filter_list" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
