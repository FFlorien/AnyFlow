<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="be.florien.anyflow.feature.player.filter.selection.SelectFilterViewModel.FilterItem" />

        <variable
            name="vm"
            type="be.florien.anyflow.feature.player.filter.selection.SelectFilterViewModel" />

        <variable
            name="selected"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <be.florien.anyflow.extension.CheckableConstrainLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_selectable_ripple"
        android:checked="@{selected}"
        android:padding="@dimen/listItemPadding">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:layout_marginBottom="@dimen/listItemPadding"
            android:contentDescription="@null"
            android:visibility="@{item.artUrl != null ? View.VISIBLE : View.GONE}"
            app:coverImageUrl="@{item.artUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:text="@{item.displayName}"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
    </be.florien.anyflow.extension.CheckableConstrainLayout>
</layout>
