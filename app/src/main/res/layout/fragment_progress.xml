<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="isRunning"
            type="boolean" />

        <variable
            name="progress"
            type="be.florien.anyflow.feature.progress.ProgressDialog.Progress" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/mediumDimen"
            android:background="@color/primary"
            android:text="@{title}"
            android:textColor="@color/onPrimaryText"
            android:textSize="@dimen/textLarge"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/mediumDimen">

            <ProgressBar
                isVisiblePresent="@{isRunning}"
                android:layout_width="@dimen/xxLargeDimen"
                android:layout_height="@dimen/xxLargeDimen"
                android:indeterminate="true" />

            <ImageView
                isVisiblePresent="@{!isRunning}"
                android:layout_width="@dimen/xxLargeDimen"
                android:layout_height="@dimen/xxLargeDimen"
                android:src="@drawable/ic_confirm"
                app:tint="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{progress.progress + `/` + progress.total}" />
        </LinearLayout>
    </LinearLayout>

</layout>