<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="be.florien.anyflow.management.playlist.model.PlaylistWithPresence" />

        <variable
            name="total"
            type="int" />

        <variable
            name="presenceBg"
            type="int" />

        <variable
            name="isAdding"
            type="boolean" />

        <variable
            name="isRemoving"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_ripple"
        android:minHeight="@dimen/minClickableSize">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/imageSize"
            android:layout_height="@dimen/imageSize"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            app:imageSource="@{item.coverConfig}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/filterName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="start|bottom"
            android:text="@{item.name}"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/filterCount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/filterCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="start|top"
            android:text="@{@plurals/playlist_songs_count(item.count, item.count)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/filterName"
            app:layout_constraintTop_toBottomOf="@id/filterName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/presence"
            style="@style/Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:background="@{presenceBg != 0x0 ? context.getDrawable(presenceBg) : @drawable/bg_corner_radius_all}"
            android:text="@{@string/playlist_presence(item.presence, total)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/action_add"
            style="@style/Chip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_add_circle"
            android:background="@drawable/bg_corner_radius_all"
            app:isVisiblePresent="@{isAdding}"
            app:layout_constraintTop_toTopOf="@id/presence"
            app:layout_constraintBottom_toBottomOf="@id/presence"
            app:layout_constraintEnd_toStartOf="@id/presence"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/action_remove"
            style="@style/Chip"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_remove_circle"
            android:background="@drawable/bg_corner_radius_remove"
            app:isVisiblePresent="@{isRemoving}"
            app:layout_constraintTop_toTopOf="@id/presence"
            app:layout_constraintBottom_toBottomOf="@id/presence"
            app:layout_constraintEnd_toStartOf="@id/presence"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
