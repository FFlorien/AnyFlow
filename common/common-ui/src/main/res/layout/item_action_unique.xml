<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/xxLargeDimen"
    android:layout_height="match_parent"
    android:padding="@dimen/smallDimen"
    android:background="@drawable/bg_blue_button">

    <ImageView
        android:id="@+id/action"
        android:layout_width="@dimen/minClickableSize"
        android:layout_height="@dimen/minClickableSize"
        android:layout_gravity="bottom|start"
        android:scaleType="fitCenter"
        app:tint="@color/accent" />

    <ImageView
        android:id="@+id/field"
        android:layout_width="@dimen/mediumDimen"
        android:layout_height="@dimen/mediumDimen"
        android:layout_gravity="bottom|start"
        android:scaleType="fitCenter"
        android:background="@drawable/bg_action"
        app:tint="@color/primary" />

</FrameLayout>